import RPi.GPIO as GPIO
import time

PIR_PIN = 11

GPIO.setmode(GPIO.BCM)
GPIO.setup(PIR_PIN, GPIO.IN)

print("Starter PIR test. Tryk Ctrl+C for at stoppe.")

try:
    while True:
        value = GPIO.input(PIR_PIN)
        print("Sensorværdi:", value)  # 0 = ingen bevægelse, 1 = bevægelse
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Afslutter...")
    GPIO.cleanup()

